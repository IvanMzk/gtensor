{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cmake generate",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release -DBUILD_TEST=ON -DBUILD_BENCHMARK=ON -G \"Ninja\" -S ${workspaceFolder} -B ${workspaceFolder}\\build",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cmake build Test",
            "command": "cmake -E time cmake -E env NINJA_STATUS=[%e/%f/%t] cmake.exe --build ${workspaceFolder}\\build -j 10 --target Test",
            "args": [],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "cmake build Benchmark",
            "command": "cmake -E time cmake -E env NINJA_STATUS=[%e/%f/%t] cmake.exe --build ${workspaceFolder}\\build -j 10 --target Benchmark",
            "args": [],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "cmake build Test with error filter",
            "command": "cmake --build ${workspaceFolder}\\build -j 10 --target Test | findstr /s /i error",
            "args": [],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run Test",
            "command": "${workspaceFolder}\\build\\test\\Test.exe",
            "args": [],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run Benchmark",
            "command": "${workspaceFolder}\\build\\benchmark\\Benchmark.exe",
            "args": [],
            "group": "test"
        },
        {
            "label":"Test build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Test","Run Test"],
            "group": "test"
        },
        {
            "label":"Benchmark build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Benchmark","Run Benchmark"],
            "group": "test"
        },
        {
            "label":"Tests build & run, error filter",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Test with error filter","Run tests"],
            "group": "test"
        }
    ]
}